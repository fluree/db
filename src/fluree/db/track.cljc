(ns fluree.db.track)

(defn track-all?
  [{:keys [meta] :as _opts}]
  (true? meta))

(defn track-fuel?
  [{:keys [max-fuel meta] :as opts}]
  (or max-fuel
      (track-all? opts)
      (-> meta :fuel true?)))

(defn track-file?
  [{:keys [meta] :as opts}]
  (or (track-all? opts)
      (-> meta :file true?)))

(defn track-policy?
  [{:keys [meta] :as opts}]
  (or (track-all? opts)
      (-> meta :policy true?)))

(defn track?
  [opts]
  (or (track-fuel? opts)
      (track-file? opts)
      (track-policy? opts)))
